<h2>Books</h2>

<table>
  <thead>
   <tr>
    <th>Title</th>
    <th>Opinion</th>
    <th colspan="2"></th>
   </tr>
  </thead>

  <tbody>
   <% @book.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
    </tr>
  </tbody>
   <% end %>
</table>

 <h2>New book</h2>
 <%= form_with model: @book do |f| %>

  <h4>Title</h4>
   <%= f.text_field :title %>
  <h4>Opinion</h4>
   <%= f.text_field :body %><br/>
  <%= f.submit 'Create Book' %>

 <% end %>
