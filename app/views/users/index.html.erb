<%= render 'list', user: @users, book: @newbook %>

<div class="col-md-8 offset-md-1">
  <h2>Users</h2>
  <table class="table">
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= profile_image %></td> <!--プロフィール画像-->
          <td><%= user.name %></td><!--ユーザー名-->
          <td><%= link_to 'show', user_path(user.id) %></td> <!--showボタン-->
        </tr>
      <% end %>
    </tbody>
</div>