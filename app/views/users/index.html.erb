<div class="container px-5 px-sm-0">
  <div class="row">
   <div class="col-md-3">
     <% if @book.errors.any? %>
      <%= @book.errors.count %>errors prohibited this obj from being saved:
      <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
<%= render 'list', user: @user, book: @book %>
</div>
<div class="col-md-8 offset-md-1">
  <h2>Users</h2>
  <table class="table">
    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to user_path(user.id) do %>
                <%= image_tag user.get_profile_image(100,100) %>
                <% end %>
                </td><!--プロフィール画像-->
          <td><%= user.name %></td><!--ユーザー名-->
          <td><%= link_to 'Show', user_path(user.id) %></td> <!--showボタン-->
        </tr>
      <% end %>
    </tbody>
    </table>
</div>

