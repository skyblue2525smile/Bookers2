<div class="container">
 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
   <h2>User info</h2>
   <form enctype="multipart/form-data" action="user.id" accept-charaset="UTF-8" method="post">
     <input type="hidden" name="_method" value="patch" autocomplete="off">
     <input type="hidden" name="authenticity_token" > 　#この1文とvalue部分の記述の必要性の有無を聞く

     <div class="form-group">
       <%= form_with model: @user do |f| %>
        <label for="inputName">Name</label>
        <input class="form-control name" type="text" value="@user.name" name="">
       #上のこの一文はHTML言語？（Rubyでは使用不可？）
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" %>
        <label for="inputImage">Image</label>
        <%= f.file_field:profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
        <label for="inputIntroduction">Introduction</label>
        <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", placeholder:"紹介文" %>
        <%= f.submit "Update User" %>
       <% end %>
     </div>






















   </form>
