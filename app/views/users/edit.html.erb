<div class="container">
 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

   <h2>User info</h2>
   <% if @user.errors.any? %>
     <%= @user.errors.count %>errors prohibited this obj from being saved:
     <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
     </ul>
   <% end %>

   <%= form_with model: @user do |f| %>

     <h7>Name</h7>
     <br/>
       <%= f.text_field :name, autofocus: true, id:"inputName" %>

     <br />
     <h7>Image</h7>
     <br/>
     <%= f.file_field :profile_image, accept: "image/*" %>

     <br/>
     <h7>Introduction</h7>

     <br/>
     <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction" %>

     <br/>
     <%= f.submit class: "btn btn-secondary" %>

   <% end %>

  </div>
 </div>
</div>























   </form>
